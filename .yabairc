#!/usr/bin/env sh

# ===== スクリプト追加の読み込み (SIP 部分無効化必須) =====
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# ===== 基本設定 =====
yabai -m config layout bsp
yabai -m config window_placement second_child

# ウィンドウ間のギャップ
yabai -m config top_padding    8
yabai -m config bottom_padding 8
yabai -m config left_padding   8
yabai -m config right_padding  8
yabai -m config window_gap     8

# マウス設定
yabai -m config mouse_modifier fn
yabai -m config mouse_action1  move
yabai -m config mouse_action2  resize

# ===== アプリごとの Space 割り当て =====
# Space 1: ブラウザ
yabai -m rule --add app="^Google Chrome$" space=1

# Space 2: 開発 (Ghostty)
yabai -m rule --add app="^Ghostty$" space=2

# Space 3: ナレッジ (Obsidian)
yabai -m rule --add app="^Obsidian$" space=3

# Space 4: コミュニケーション
yabai -m rule --add app="^Discord$" space=4

# ===== 管理対象外のアプリ =====
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^Raycast$" manage=off

# ===== ログイン時のアプリ自動起動 =====
# Space 1: ブラウザ
pgrep -x "Google Chrome" > /dev/null || open -a "Google Chrome"

# Space 2: 開発 (Ghostty)
pgrep -x "ghostty" > /dev/null || open -a "Ghostty"

# Space 3: ナレッジ (Obsidian)
pgrep -x "Obsidian" > /dev/null || open -a "Obsidian"

# Space 4: コミュニケーション
pgrep -x "Discord" > /dev/null || open -a "Discord"

echo "yabai configuration loaded"
