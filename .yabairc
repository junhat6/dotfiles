#!/usr/bin/env sh

# ===== スクリプト追加の読み込み (SIP 部分無効化必須) =====
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# ===== 基本設定 =====
yabai -m config layout bsp
yabai -m config window_placement second_child

# ウィンドウ間のギャップ
yabai -m config top_padding    8
yabai -m config bottom_padding 8
yabai -m config left_padding   8
yabai -m config right_padding  8
yabai -m config window_gap     8

# マウス設定
yabai -m config mouse_modifier fn
yabai -m config mouse_action1  move
yabai -m config mouse_action2  resize

# ===== アプリごとの Space 割り当て =====
# Space 1: AI アシスタント
yabai -m rule --add app="^Google Gemini$" space=1

# Space 2: ブラウザ
yabai -m rule --add app="^Google Chrome$" space=2

# Space 3: Docs (Antigravity)
yabai -m rule --add app="^Antigravity$" space=3

# Space 4: Frontend (VS Code)
yabai -m rule --add app="^Visual Studio Code$" space=4

# Space 5: Backend (IntelliJ)
yabai -m rule --add app="^IntelliJ IDEA$" space=5

# Space 6: コミュニケーション
yabai -m rule --add app="^Discord$" space=6
yabai -m rule --add app="^Slack$" space=6

# ===== 管理対象外のアプリ =====
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^Raycast$" manage=off

# ===== ログイン時のアプリ自動起動 =====
# Space 1: AI
pgrep -x "Google Gemini" > /dev/null || open -a "Google Gemini"

# Space 2: ブラウザ
pgrep -x "Google Chrome" > /dev/null || open -a "Google Chrome"

# Space 3: Docs (Antigravity)
pgrep -x "Antigravity" > /dev/null || open -a "Antigravity" ~/ghq/github.com/assari-harassment/voicebooklm-docs

# Space 4: Frontend (VS Code)
pgrep -x "Code" > /dev/null || code ~/ghq/github.com/assari-harassment/voicebooklm-frontend

# Space 5: Backend (IntelliJ)
pgrep -x "idea" > /dev/null || open -a "IntelliJ IDEA" ~/ghq/github.com/assari-harassment/voicebooklm-backend

# Space 6: コミュニケーション
pgrep -x "Discord" > /dev/null || open -a "Discord"
pgrep -x "Slack" > /dev/null || open -a "Slack"

echo "yabai configuration loaded"
